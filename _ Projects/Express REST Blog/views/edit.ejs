<% include partials/header %>

    <div class="ui huge header">Edit <%= blog.title %></div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" value="<%= blog.title %>"></input>
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="blog[image]" id="image" value="<%= blog.image %>"></input>
        </div>
        <div class="field">
            <label for="body">Content</label>
            <textarea name="blog[body]" id="body"><%= blog.body %></textarea>
        </div>

        <button class="ui green basic button">Submit</button>
    </form>


<% include partials/footer %>