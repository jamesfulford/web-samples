<% include partials/header %>

<div class="ui huge header">Index Page</div>
<div class="ui divided items">

    <% blogs.forEach(function(blog) { %>


    <div class="item">
        <div class="image">
            <img class="ui centered rounded image" src="<%= blog.image %>" />
        </div>
        <div class="content">
            <a href="/blogs/<%= blog._id %>" class="header">
                <%= blog.title %>
            </a>
            <div class="meta">
                <span>Created <%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <%- blog.body.substring(0, 140) %>...
                <br>
                <a href="/blogs/<%= blog._id %>" class="ui floated basic green button">
                    Read More
                    <i class="right chevron icon"></i>
                </a>
            </div>
        </div>
    </div>
    <% }); %>



</div>



<% include partials/footer %>
